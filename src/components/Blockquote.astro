---
interface Props {
  author?: string;
  source?: string;
  url?: string;
  epigraph?: boolean;
}

const { author, source, url, epigraph = false } = Astro.props;
---

<blockquote class:list={["tufte-blockquote", { epigraph }]}>
  <div class="quote-content">
    <slot />
  </div>
  {(author || source) && (
    <footer class="quote-footer">
      {author && <span class="author">{author}</span>}
      {source && (
        <>
          {author && <span class="separator">, </span>}
          {url ? (
            <cite><a href={url} target="_blank" rel="noopener noreferrer">{source}</a></cite>
          ) : (
            <cite>{source}</cite>
          )}
        </>
      )}
    </footer>
  )}
</blockquote>

<style>
  /* 普通引用：缩进，无装饰 */
  .tufte-blockquote {
    font-family: var(--font-serif-quote) !important;
    font-size: 1rem;
    line-height: 1.6;
    margin: 1.5rem 0;
    margin-left: 2rem;
    padding: 0;
    border: none;
    quotes: none;
  }

  /* 所有引用都使用斜体 */
  .tufte-blockquote {
    font-style: italic;
  }

  .tufte-blockquote .quote-content {
    font-style: italic;
  }

  .tufte-blockquote::before,
  .tufte-blockquote::after {
    content: none !important;
  }

  .tufte-blockquote .quote-content {
    margin: 0;
    white-space: pre-line;
  }

  .tufte-blockquote .quote-content::before,
  .tufte-blockquote .quote-content::after {
    content: none !important;
  }

  .tufte-blockquote .quote-content :global(p)::before,
  .tufte-blockquote .quote-content :global(p)::after {
    content: none !important;
  }

  .tufte-blockquote .quote-content :global(p) {
    margin: 0 0 0.5rem 0;
    white-space: pre-line;
  }

  .tufte-blockquote .quote-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .tufte-blockquote .quote-footer {
    font-family: var(--font-serif);
    font-size: 0.85rem;
    font-style: normal;
    text-align: right;
    margin-top: 0.75rem;
    color: #555;
  }

  .tufte-blockquote .quote-footer::before {
    content: "\2014\0020";
  }

  .tufte-blockquote .author {
    font-variant: small-caps;
    letter-spacing: 0.05em;
  }

  .tufte-blockquote cite {
    font-style: italic;
  }

  .tufte-blockquote cite a {
    color: inherit;
  }

  /* Epigraph：居中，带装饰引号 */
  .tufte-blockquote.epigraph {
    margin: 3rem auto;
    margin-left: auto;
    padding: 0 2rem;
  }

  .tufte-blockquote.epigraph .quote-content {
    position: relative;
    font-style: italic;
    text-align: left;
  }

  /* 装饰性引号 - 仅 epigraph */
  .tufte-blockquote.epigraph .quote-content::before {
    content: "\201C";
    font-size: 3rem;
    font-family: Georgia, serif;
    color: #ccc;
    position: absolute;
    left: -1.5rem;
    top: -0.5rem;
    line-height: 1;
  }

  .tufte-blockquote.epigraph .quote-content::after {
    content: "\201D";
    font-size: 3rem;
    font-family: Georgia, serif;
    color: #ccc;
    position: absolute;
    right: -1.5rem;
    bottom: -1rem;
    line-height: 1;
  }

  .tufte-blockquote.epigraph .quote-footer {
    text-align: right;
    margin-top: 1rem;
  }

  @media (min-width: 768px) {
    .tufte-blockquote.epigraph {
      width: 70%;
      max-width: 50ch;
    }
  }
</style>
