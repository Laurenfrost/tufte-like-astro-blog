---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<span class="marginnote-wrapper">
  <label class="marginnote-toggle-label" for={`mn-${id}`} aria-describedby={`marginnote-${id}`}>+</label>
  <input type="checkbox" id={`mn-${id}`} class="marginnote-toggle" />
  <span class="marginnote" id={`marginnote-${id}`} role="note">
    <slot />
  </span>
</span>

<style>
  .marginnote-wrapper {
    position: relative;
  }

  .marginnote-toggle {
    display: none;
  }

  .marginnote-toggle-label {
    display: none;
  }

  /*
   * Desktop: margin notes float into right padding area (no number)
   */
  @media (min-width: 768px) {
    .marginnote {
      float: right;
      clear: right;
      position: relative;
      margin-right: -38%;
      width: 33%;
      margin-top: 0;
      margin-bottom: 1rem;
      font-size: 0.8rem;
      line-height: 1.5;
      color: #555;
    }
  }

  @media (min-width: 1024px) {
    .marginnote {
      margin-right: -42%;
      width: 36%;
    }
  }

  /* Wide screens: fixed values */
  @media (min-width: 1400px) {
    .marginnote {
      margin-right: -420px;
      width: 380px;
    }
  }

  /*
   * Mobile: margin notes hidden by default,
   * shown inline when clicked
   */
  @media (max-width: 767px) {
    .marginnote-toggle-label {
      display: inline;
      cursor: pointer;
      color: #a00;
      font-size: 0.8em;
      font-weight: bold;
      margin-left: 0.2em;
      text-decoration: underline;
    }

    .marginnote {
      display: none;
    }

    .marginnote-toggle:checked + .marginnote {
      display: block;
      float: none;
      clear: both;
      width: 100%;
      margin: 0.8rem 0;
      padding: 0.8rem 1rem;
      background-color: #f8f8f5;
      border-left: 3px solid #ccc;
      font-size: 0.9rem;
      line-height: 1.6;
      color: #444;
    }
  }
</style>
